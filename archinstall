#Packages:

pacstrap -K /mnt base linux linux-firmware base-devel networkmanager nvidia wget htop vi vim grub git openssh

# genfstab -U /mnt >> /mnt/etc/fstab
# arch-chroot /mnt
# ln -sf /usr/share/zoneinfo/Europe/Belgrade /etc/localtime
Edit /etc/locale.gen and uncomment en_US.UTF-8 UTF-8
locale-gen
/etc/locale.conf

LANG=en_US.UTF-8

passwd

pacman -S grub
grub-install --target=i386-pc /dev/sdX
grub-mkconfig -o /boot/grub/grub.cfg

#Enable NetworkManager
systemctl enable NetworkManager
systemctl start NetworkManager

useradd --create-home --groups wheel --shell /bin/bash vlada

#sudo config

visudo 
uncomment the line that says wheel group memebers can use passwordless sudo

/etc/sudoers.d/01-vlada-passwordless.conf
vlada ALL=(ALL) NOPASSWD:ALL

#display drivers:

lspci -k | grep -A 2 -E "(VGA|3D)"
sudo pacman -S nvidia


#Installing dwm, dmenu, st:
#https://github.com/monroeclinton/arch_install/
#https://forums.bunsenlabs.org/viewtopic.php?id=7571
#https://faun.pub/the-easiest-way-to-install-dwm-43bbf668ea83

rmmod pcskpr
/etc/modprobe.d/turn-off-pc-speaker.conf
blacklist pcspkr

